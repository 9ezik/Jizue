<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/"><%= render_breadcrumbs %></a></li>
        <li> Search by request </li>
      </ol>
    </div>
  </div>
</div>

<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-9 prdt-left">
        <% if @products %>
          <div class="product-one">
            <% @products.each do |prod| %>
             <div class="col-md-4 product-left p-left">
               <div class="product-main simpleCart_shelfItem">
                 <a href="/product/<%=prod.id %>" class="mask">
                   <%= image_tag(prod.img, alt: "", class: "img-responsive zoom-img") %>
                 </a>
                 <div class="product-bottom">
                   <h3><a href="product/<%=prod.id%>"><%=prod.title %></a></h3>
                   <p>Explore Now</p>
                   <h4>$ <%=prod.price %></h4>
                   <del>$ <%=prod.old_price %></del>
                 </div>
                 <div class="srch srch1">
                   <span>-<%= ((prod.old_price - prod.price) / prod.old_price * 100).round(0) %>%</span>
                 </div>
               </div>
             </div>
              <% end %>
            <div class="clearfix"></div>
          </div>
        <% else %>
          <h3>Nothing to show</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>