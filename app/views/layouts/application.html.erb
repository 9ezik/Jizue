<!DOCTYPE html>
<html lang="en">
  <head>
    <%= display_meta_tags title: @page_title, description: @page_description, keywords: @page_keywords%>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "bootstrap", media: "all" %>
    <%= stylesheet_link_tag "flexslider", media: "all" %>
    <%= stylesheet_link_tag "memenu", media: "all" %>
    <%= stylesheet_link_tag "style", media: "all" %>
    <%= stylesheet_link_tag "mystyle", media: "all" %>

    <%= javascript_include_tag 'application.js', 'bootstrap.min', 'easydrop', 'flexs', 'imagezoom', 'jquery-1.11.0.min', 'mem', 'memenu', 'responsive',
                               'responsiveslides.min', 'simpleCart.min', 'slideshow', 'typeahead.bundle' %>

    <meta name="viewport content="width=device-width, initial-scale=1"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <%= favicon_link_tag 'icon.png' %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>

  <%= render 'include/main/top_header'%>

  <div class="logo">
    <%= link_to root_path do %>
      <h1>Jizue Shop</h1>
    <%end%>
  </div>

  <%= render 'include/main/bottom_header'%>

  <div class="content">
    <%= yield %>
  </div>

  <%= render 'include/main/footer'%>

  </body>
</html>
