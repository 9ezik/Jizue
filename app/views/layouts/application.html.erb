<!DOCTYPE html>
<html lang="en">
  <head>
    <%= display_meta_tags title: @page_title, description: @page_description, keywords: @page_keywords%>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>

  <%= render 'include/main/top_header'%>

  <div class="logo">
    <%= link_to root_path do %>
      <h1>Jizue Shop</h1>
    <%end%>
  </div>

  <%= render 'include/main/bottom_header'%>

  <div class="content">
    <%= yield %>
  </div>

  <%= render 'include/main/footer'%>

  </body>
</html>
