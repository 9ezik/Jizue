<!--breadcrumbs-start-->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/"></a></li>
        <% if @category.parent %>
          <li><%= @category.parent.title %></li>
        <% end %>
        <li><%= @category.title %></li>
      </ol>

    </div>
  </div>
</div>
<!--breadcrumbs-end-->
<!--prdt-start-->
<div class="prdt">
    <div class="container">
        <div class="prdt-top">
            <div class="col-md-9 prdt-left">


              <% if @category.children.present? %>

                <div class="product-one">
                  <% @category.children.each do |child_category| %>
                    <% child_category.products.each do |product| %>
                      <div class="col-md-4 product-left p-left">
                        <div class="product-main simpleCart_shelfItem">
                          <%= link_to(image_tag(product.img, alt: "", class: "img-responsive zoom-img"), product, class: "mask") %>
                          <div class="product-bottom">
                            <h3><%= product.title %></h3>
                            <p>Explore Now</p>
                            <h4>
                              <a data-id="<%= product.id %>" class="add-to-cart-link" href="cart/add?id=<%= product.id %>"><i></i></a>
                              <span class="item_price"><%= product.price %></span>
                              <% if product.old_price %>
                                <small><del><%= product.old_price %></del></small>
                              <% end %>
                            </h4>
                          </div>
                          <div class="srch srch1">
                            <span>-<%= ((product.old_price - product.price) / product.old_price * 100).round(0) %>%</span>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                  <div class="clearfix"></div>
                </div>



              <% elsif !@category.products.empty? %>
                    <div class="product-one">
                        <% @category.products.each do |product| %>
                            <div class="col-md-4 product-left p-left">
                                <div class="product-main simpleCart_shelfItem">
                                    <%= link_to(image_tag(product.img, alt: "", class: "img-responsive zoom-img"), product, class: "mask") %>
                                    <div class="product-bottom">
                                        <h3><%= product.title %></h3>
                                        <p>Explore Now</p>
                                        <h4>
                                            <span class="item_price"><%=product.price %>$</span>
                                            <% if product.old_price %>
                                                <small><del><%= product.old_price %>$</del></small>
                                            <% end %>
                                        </h4>
                                    </div>
                                    <div class="srch srch1">
                                      <span>-<%= ((product.old_price - product.price) / product.old_price * 100).round(0) %>%</span>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        <div class="clearfix"></div>
                    </div>
                <% else %>
                    <h3>Category empty</h3>
                <% end %>
            </div>
        </div>
    </div>
</div>